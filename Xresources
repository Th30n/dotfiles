! urxvt terminal options
URxvt.inputMethod: ibus
URxvt.preeditType: OverTheSpot
URxvt.font: xft:inconsolata:style=medium:size=14:antialias=true, \
            xft:dejavusansmono:style=regular:size=12:antialias=true, \
            xft:sourcehansans:style=regular:size=12:antialias=true
URxvt.scrollBar: false
URxvt.cursorBlink: true
URxvt.cursorColor: 6
URxvt.cursorUnderline: false
URxvt.saveLines: 1000
! Hide mouse when typing or idle
URxvt.pointerBlank: true
! Borderless does not work properly on Mate Desktop
URxvt.borderLess: false
URxvt.override-redirect: false
! secondary screen (e.g. less) disable terminal scroll
URxvt.secondaryScreen: true
URxvt.secondaryScroll: true
! perl extensions
URxvt.perl-ext-common: default,confirm-paste,matcher
URxvt.url-launcher: /usr/bin/firefox
! perl-matcher extension, open url with lmb
URxvt.matcher.button: 1

! Default DPI
Xft.dpi: 96
